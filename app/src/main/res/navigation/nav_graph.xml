<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="br.com.gabrielnovaes.appnews.ui.fragments.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
        <argument
            android:name="article"
            app:argType="br.com.gabrielnovaes.appnews.data.local.model.Article" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_favorite"
        android:id="@+id/favoriteFragment"
        android:name="br.com.gabrielnovaes.appnews.ui.fragments.favorite.FavoriteFragment"
        android:label="Favorites" >
        <action
            android:id="@+id/action_favoriteFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
        <argument
            android:name="article"
            app:argType="br.com.gabrielnovaes.appnews.data.local.model.Article" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_search"
        android:id="@+id/searchFragment"
        android:name="br.com.gabrielnovaes.appnews.ui.fragments.search.SearchFragment"
        android:label="Search" >
        <action
            android:id="@+id/action_searchFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
        <argument
            android:name="article"
            app:argType="br.com.gabrielnovaes.appnews.data.local.model.Article" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_article"
        android:id="@+id/webViewFragment"
        android:name="br.com.gabrielnovaes.appnews.ui.fragments.webview.WebViewFragment"
        android:label="Article" >
        <argument
            android:name="article"
            app:argType="br.com.gabrielnovaes.appnews.data.local.model.Article" />
    </fragment>
</navigation>